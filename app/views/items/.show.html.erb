<%= hidden_field :item, :id , { value: @item.id, id: 'item' } %>
<div class="row">
  <div class="col-sm-6">
  <%= image_tag @item.picture %>
  </div>
  <div class="col-sm-6 item">
    <h2><%= @item.name %></h2>
    <h4><%= @item.price %></h4>
    <label for="">Quantity</label>
    <input type="number" id="qty" value="1"/>
    <div class="btn-primary button" id="addToCart">Add to Shopping Cart</div>
  </div>
</div>